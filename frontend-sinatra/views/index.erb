<div class="container">
<form action="/users" method="post" class="py-3">
  <div class="form-group">
    <label for="numInput" >Number of Users to Create</label>
    <input type="text" id="numInput" class="form-control" name = "n" value="0" placeholder="Please Enter">
    <small class="form-text text-muted">It should be less than 30 to ensure success</small>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

  <form action="/users/destroy" method="post">
    <div class="form-group">
    <label>Destroy ALL Users!</label>
    <button type="submit" id="destroyButton" class="btn btn-danger">Destroy</button>
    </div>
  </form>
</div>


<section class="bg-light text-center py-5">
  <h2>User Table</h2>
  <div class="container">
    <p>
      Total Number: <%= @users.size %>
    </p>
    <table class="table table-hover">
      <thead>
      <tr>
        <th class="text-center">User Name</th>
        <th class="text-center">User Email</th>
        <th class="text-center">User Bio</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user["name"] %></td>
          <td><%= user["email"] %></td>
          <td><%= user["bio"] %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>





